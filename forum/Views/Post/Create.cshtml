@model forum.ViewModels.PostCreateViewModel
@{
    ViewData["Title"] = "Create Post";
}
<h1>Create Post</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Post.Title"></label><span class="text-danger">*</span>
        <input asp-for="Post.Title" class="form-control"/>
        <span asp-validation-for="Post.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Content"></label><span class="text-danger">*</span>
        <input asp-for="Post.Content" class="form-control"/>
        <span asp-validation-for="Post.Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Post.Category"></label><span class="text-danger">*</span>
        <select asp-for="Post.CategoryId" asp-items="Model.CategorySelectList" class="form-control"></select>
        <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Post.Tags"></label><span class="text-danger">*</span>
        <select multiple asp-for="Post.TagIds" asp-items="Model.TagSelectList" class="form-control"></select>
        <span asp-validation-for="Post.TagIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Card" class="btn btn-secondary">Back to Card View</a>
</form>