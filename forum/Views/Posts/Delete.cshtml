@model Post
@{
    ViewData["Title"] = "Delete Post";
}
<h1>Delete Post</h1>


<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>Item</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Tags</dt>
        @*<dd class="col-sm-10">@Model.Tags</dd>*@
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PostId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Card" class="btn btn-secondary">Cancel</a>
    </form>
</div>