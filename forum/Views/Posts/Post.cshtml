@model Post
@{
    ViewData["Title"] = @Model.Title;
}

<div>
    <h1>@Model.Title</h1>
    <div>
        <span>@Model.PostId</span>
        <span>@Model.Content</span>
        <span>Created @Model.DateCreated</span>
        <span>Last active @Model.DateLastEdited</span>
        <h2>Comments</h2>
        <div>
            @foreach (var comment in Model.Comments)
            {
                <partial name="_Comment" model="comment"/>
            }
        </div>
    </div>
</div>
