@model List<Comment>

<div>
    @if (Model.Count > 0)
    {
        @foreach (var comment in Model)
        {
            @if (comment.ParentCommentId == null) // Only shows comments directly to the post, not replies(comments) to other comments.
            {
                <partial name="_Comment" model="comment"/>
            }
        }
    }
    else
    {
        <span>Be the first to comment</span>
    }
</div>