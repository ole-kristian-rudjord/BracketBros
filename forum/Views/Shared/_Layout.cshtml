<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BracketBros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css">
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
<header>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
	      <a class="navbar-brand d-flex gap-2" asp-area="" asp-controller="Home" asp-action="Index">
	        <img src="/images/code-solid.svg" alt="" width="24" class="d-inline-block align-text-top">
	        <span>BracketBros</span>
	      </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
	        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
		        <li class="nav-item">
			        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
		        </li>
		        <li class="nav-item">
			        <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Card">Posts</a>
		        </li>
		        <li class="nav-item dropdown">
			        <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Create">Create Post</a>
		        </li>
	        </ul>
	        <div>
		        My profile
	        </div>
        </div>
      </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="py-4">
        @RenderBody()
    </main>
</div>
</body>
</html>