@model Post

<div class="d-flex flex-column border rounded bg-dark bg-opacity-10">
	<div class="d-flex flex-row justify-content-between px-3 py-1 fs-6 text-dark text-opacity-50">
		<div>
			Posted by <span class="text-dark text-opacity-75">@Model.User?.Username</span>
		</div>
		<div>
			@Model.DateCreated.ToShortDateString() @Model.DateCreated.ToShortTimeString()
			@if (Model.DateLastEdited != null)
			{
				<span>[Last edited: @Model.DateLastEdited?.ToShortDateString() @Model.DateLastEdited?.ToShortTimeString()]</span>
			}
		</div>
	</div>
	
	<div class="d-flex flex-column gap-3 p-3 rounded bg-dark bg-opacity-25">
		<h1 class="mb-0">@Model.Title</h1>
		<div>@Model.Content</div>
		<div class="d-flex flex-row gap-1">
        	<span class="px-1 rounded bg-light bg-opacity-75">@Model.Category?.Name</span>
        	@if (Model.Tags != null)
        	{
        		foreach (var tag in Model.Tags)
        		{
        			<span class="px-1 rounded bg-light bg-opacity-50">@tag.Name</span>
        		}
        	}
        </div>
	</div>
	
	<div class="d-flex flex-row justify-content-between align-items-center px-3 py-2 fw-bold text-dark text-opacity-50">
		<div class="d-flex flex-row gap-3">
			<span>@Model.Likes Likes</span>
			<span>@Model.Comments?.Count Comments</span>
		</div>
		<div class="d-flex flex-row gap-1">
			<a class="px-2 py-1 rounded bg-light bg-opacity-75"
			   asp-controller="Post"
			   asp-action="Update"
			   asp-route-id="@Model.PostId">
				Edit
			</a>
			<a class="px-2 py-1 rounded bg-light bg-opacity-75"
			   asp-controller="Post"
			   asp-action="Delete"
			   asp-route-id="@Model.PostId">
				Delete
			</a>
			<a class="px-2 py-1 rounded bg-light bg-opacity-75"
			   asp-controller="Post"
			   asp-action="Post"
			   asp-route-id="@Model.PostId">
				Go to post
			</a>
		</div>
	</div>
</div>
